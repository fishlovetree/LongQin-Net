                </a>
            </div>
            <ul class="nav navbar-nav">
                <li class="li-menu-home"><a href="/home/index">首页</a></li>
                @foreach (Menu item in ViewBag.MenuList)
                {
                    <li class="dropdown li-menu-system">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@item.MenuName <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @foreach (Menu child in @item.Children)
                            {
                                <li><a href="@(child.MenuUrl + "?parentId=" + item.MenuId)">@child.MenuName</a></li>
                            }
                        </ul>
                    </li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/" target="_blank">网站首页</a></li>
